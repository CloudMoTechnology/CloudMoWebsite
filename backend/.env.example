# 墨云科技后端环境变量配置
# 复制此文件为 .env 并填入实际值

# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
# SQLite (开发环境)
DATABASE_URL="file:./dev.db"

# PostgreSQL (生产环境)
# DATABASE_URL="postgresql://user:password@localhost:5432/cloudmo?schema=public"

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 管理员初始账号
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@cloudmo.tech

# 跨域配置
CORS_ORIGIN=http://localhost:5173

# 上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
