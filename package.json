{
  "name": "cloudmo-website",
  "version": "1.0.0",
  "description": "墨云科技官方网站 - CloudMo Technology Official Website",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && pnpm run dev",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "cd frontend && pnpm run build",
    "build:backend": "cd backend && pnpm run build",
    "start": "cd backend && pnpm run start",
    "install:all": "pnpm install && cd frontend && pnpm install && cd ../backend && pnpm install",
    "prisma:generate": "cd backend && pnpm run prisma:generate",
    "prisma:push": "cd backend && pnpm run prisma:push"
  },
  "keywords": [
    "cloudmo",
    "墨云科技",
    "official-website",
    "vue",
    "nodejs",
    "typescript"
  ],
  "author": "MoYeRanQianZhi",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
